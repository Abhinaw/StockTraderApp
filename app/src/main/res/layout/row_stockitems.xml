<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tvlabelOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="abcdefghijklmnopqrstuvwxyz"
        android:maxWidth="230dp"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/lytLabelTwoThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLabelTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:text="38.62"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLabelThree"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="-2.57%"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="normal" />

    </LinearLayout>

        <TextView
            android:id="@+id/tvLabelFour"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvlabelOne"
            android:maxWidth="230dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:text="Digit tal Turbine Inc.hshshshhshssh"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="15dp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLabelFive"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post: +0.04%"
        android:layout_below="@id/lytLabelTwoThree"
        android:layout_alignParentRight="true"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:textStyle="bold"/>


</RelativeLayout>